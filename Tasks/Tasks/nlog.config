<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
		<targets>
			<target name="sql" xsi:type="Database"
					connectionString="Server=(DESKTOP-B61M7D6);Database=NefeshYehudi;Trusted_Connection=True;"
					commandText="INSERT INTO LogEntries (Message, Timestamp) VALUES (@message, @timestamp);">
				<parameter name="@message" layout="${message}" />
				<parameter name="@timestamp" layout="${date}" />
			</target>
		</targets>
		<rules>
			<logger name="*" minlevel="Info" writeTo="sql" />
		</rules>

	<!-- rules to map from logger name to target  587	  secureSocketOption="SslOnConnect"
-->

		<!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
		<!--logger name="Microsoft.*" maxlevel="Info" final="true" /> -->
		<!--logger name="System.Net.Http.*" maxlevel="Info" final="true" /> -->
</nlog>