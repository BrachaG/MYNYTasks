<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace"
     >
	
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<target xsi:type="Database"
		name="DB"
		connectionString="Server=DESKTOP-B61M7D6;Database=NefeshYehudi;Trusted_Connection=True;Trust Server Certificate=true;"
		commandText="INSERT INTO Logs (CreatedOn,Message,Level,StackTrace,Exception,Logger,Url) VALUES (@datetime,@msg,@level,@trace,@exception,@logger,@url)"
			keepConnection="true"> 
			<parameter name="@datetime" layout="${date}" />
			<parameter name="@msg" layout="${message}" />
			<parameter name="@level" layout="${level}" />
			<parameter name="@exception" layout="${exception:tostring}" />
			<parameter name="@trace" layout="${stacktrace}" />
			<parameter name="@logger" layout="${logger}" />
			<parameter name="@url" layout="${aspnet-request-url}" />
		</target>
	</targets>
		<rules>
			<logger name="*" minlevel="Debug" maxlevel="Error"  writeTo="DB"/>
		</rules>
	<!-- rules to map from logger name to target  587	  secureSocketOption="SslOnConnect"-->
		<!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
		<!--logger name="Microsoft.*" maxlevel="Info" final="true" /> -->
		<!--logger name="System.Net.Http.*" maxlevel="Info" final="true" /> -->
</nlog>
